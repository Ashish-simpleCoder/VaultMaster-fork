{
  "name": "keyguard",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint --parallel --no-cache",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --cache"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@keyguard/eslint-config": "workspace:*",
    "@keyguard/tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
